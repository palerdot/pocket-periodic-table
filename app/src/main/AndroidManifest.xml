<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.palerdot.pocketperiodictable"
    android:versionCode="1"
    android:versionName="0.1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:name=".ElementXMLParser"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainTableActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowElementActivity"
            android:label="@string/title_activity_show_element"
            android:parentActivityName=".MainTableActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/ElementDetailTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.palerdot.pocketperiodictable.MainTableActivity" >
            </meta-data>
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainTableActivity"
            android:screenOrientation="sensorLandscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.palerdot.pocketperiodictable.MainTableActivity" >
            </meta-data>
        </activity>
    </application>

</manifest>
